<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cqupt.community.dao.UserDao">
    <sql id="fileds">
        id, username, password, salt, email, type, status, activation_code, header_url, create_time
    </sql>

    <sql id="insertFileds">
        username, password, salt, email, type, status, activation_code, header_url, create_time
    </sql>

    <select id="getUserById" resultType="User">
        SELECT <include refid="fileds"></include> FROM user where id = #{userId}
    </select>

    <insert id="insertUser" parameterType="User" keyProperty="id">
        insert into user (<include refid="insertFileds"></include>) values(#{username}, #{password}, #{salt}, #{email}, #{type}, #{status}, #{activationCode}, #{headerUrl}, #{createTime})
    </insert>

    <select id="selectByName" resultType="User">
        SELECT <include refid="fileds"></include> FROM user where username = #{username}
    </select>

    <select id="selectByEmail" resultType="User">
        SELECT <include refid="fileds"></include> FROM user where email = #{email}
    </select>

    <update id="updateUserStatus">
        update user set status = #{status} where id = #{id}
    </update>

    <update id="updateUserHeaderUrl">
        update user set header_url = #{headerUrl} where id = #{userId}
    </update>

    <update id="updateUserPassword">
        update user set password = #{password} where id = #{userId}
    </update>
</mapper>